{
  "name": "ncol-next",
  "private": true,
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "build": "next build",
    "build-storybook": "storybook build",
    "dev": "next dev",
    "find-duplicate-code": "knip",
    "format": "prettier --write src/",
    "install:clean": "rm -rf ./node_modules && rm -rf package-lock.json && npm install",
    "lint": "next lint",
    "postbuild": "next-sitemap",
    "sst:deploy": "npx sst deploy --stage production",
    "start": "next start",
    "storybook:start": "storybook dev -p 6006",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:snap-gen": "cross-env NODE_ENV=test jest --u",
    "test:unit": "cross-env NODE_ENV=test jest --config jest.config.ts --coverage",
    "test:unit:watch": "cross-env NODE_ENV=test jest --watch"
  },
  "dependencies": {
    "@logtail/next": "^0.1.7",
    "@next/third-parties": "^15.2.2",
    "@sentry/browser": "^9.5.0",
    "@sentry/integrations": "^7.114.0",
    "@sentry/nextjs": "^9.5.0",
    "@taboola/taboola-react-web": "^0.5.0",
    "change-case-all": "^2.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.479.0",
    "next": "^15.2.2",
    "next-sitemap": "^4.2.2",
    "next13-progressbar": "^1.2.2",
    "postcss": "^8.5.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-facebook": "^9.0.12",
    "sst": "3.9.39",
    "tailwind-merge": "^3.0.2",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.24.2",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.5",
    "@next/eslint-plugin-next": "^15.2.2",
    "@storybook/addon-a11y": "^8.6.4",
    "@storybook/addon-actions": "^8.6.4",
    "@storybook/addon-essentials": "^8.6.4",
    "@storybook/addon-links": "^8.6.4",
    "@storybook/addon-measure": "^8.6.4",
    "@storybook/addon-outline": "^8.6.4",
    "@storybook/addon-styling-webpack": "^1.0.1",
    "@storybook/manager-api": "^8.1.3",
    "@storybook/nextjs": "^8.6.4",
    "@storybook/preview-api": "^8.1.3",
    "@storybook/react": "^8.1.3",
    "@storybook/theming": "^8.1.3",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/postcss": "^4.0.14",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/dom": "^10.1.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/gtag.js": "^0.0.20",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "check-code-coverage": "^1.10.5",
    "cross-env": "^7.0.3",
    "eslint": "^9.22.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-next": "^15.2.2",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.2",
    "eslint-plugin-storybook": "^0.11.4",
    "eslint-plugin-tailwind": "^0.2.1",
    "identity-obj-proxy": "^3.0.0",
    "import-sort-style-module": "^6.0.0",
    "jest": "^29.6.4",
    "jest-environment-jsdom": "^29.6.4",
    "knip": "^5.46.0",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "prettier-plugin-import-sort": "^0.0.7",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "simple-git-hooks": "^2.9.0",
    "storybook": "^8.1.3",
    "stylelint": "^16.15.0",
    "stylelint-config-standard": "^37.0.0",
    "tailwind-scrollbar": "^4.0.1",
    "tailwindcss": "^4.0.14",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.1",
    "typescript": "^5.8.2"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged --concurrent false",
    "pre-push": "npm run format",
    "preserveUnused": true
  },
  "lint-staged": {
    "**/*/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "jest --bail --findRelatedTests --passWithNoTests"
    ]
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "parser": "typescript",
      "style": "module"
    }
  },
  "volta": {
    "node": "20.13.1"
  }
}
