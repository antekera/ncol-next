{
  "name": "ncol-next",
  "private": true,
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "build": "next build",
    "build-storybook": "build-storybook",
    "dev": "next dev",
    "format": "prettier --write src/",
    "install:clean": "rimraf ./node_modules && rimraf package-lock.json && npm install",
    "lint": "next lint",
    "start": "next start",
    "storybook:start": "start-storybook -p 6006",
    "test:unit": "jest --config jest.config.ts --coverage",
    "test:coverage": "jest --coverage",
    "test:unit:watch": "jest --watch"
  },
  "dependencies": {
    "@heroicons/react": "^1.0.5",
    "@storybook/react": "^6.5.9",
    "axios": "^0.24.0",
    "change-case": "^4.1.2",
    "classnames": "^2.3.1",
    "date-fns": "^2.28.0",
    "html-react-parser": "^1.4.5",
    "next": "^12.1.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "zustand": "^3.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@storybook/addon-a11y": "^6.4.14",
    "@storybook/addon-actions": "^6.4.13",
    "@storybook/addon-essentials": "^6.4.13",
    "@storybook/addon-links": "^6.4.13",
    "@storybook/addon-measure": "^6.4.14",
    "@storybook/addon-outline": "^6.4.14",
    "@storybook/addons": "^6.4.14",
    "@storybook/theming": "^6.4.14",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/line-clamp": "^0.3.1",
    "@tailwindcss/typography": "^0.5.2",
    "@testing-library/dom": "^8.11.2",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@types/node": "17.0.8",
    "@types/react": "17.0.38",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "autoprefixer": "^10.4.7",
    "babel-loader": "^8.2.3",
    "eslint": "^8.7.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-next": "12.0.8",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-tailwind": "^0.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.4.7",
    "lint-staged": "^12.5.0",
    "postcss": "^8.4.14",
    "prettier": "^2.5.1",
    "simple-git-hooks": "^2.8.0",
    "storybook-tailwind-dark-mode": "^1.0.11",
    "tailwind-scrollbar": "^1.3.1",
    "tailwindcss": "^3.1.4",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "cd ../../ && npm run format"
  },
  "lint-staged": {
    "src/**/*.{jsx,tsx}?(x)": [
      "eslint --fix",
      "npm run test:unit -- --bail --findRelatedTests"
    ]
  }
}
