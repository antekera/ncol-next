{
  "name": "ncol-next",
  "private": true,
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "build": "next build",
    "postbuild": "next-sitemap",
    "build-storybook": "storybook build",
    "dev": "next dev",
    "format": "prettier --write src/",
    "install:clean": "rimraf ./node_modules && rimraf package-lock.json && npm install",
    "lint": "next lint",
    "start": "next start",
    "storybook:start": "storybook dev -p 6006",
    "test:unit": "jest --config jest.config.ts --coverage",
    "test:coverage": "jest --coverage",
    "test:unit:watch": "jest --watch"
  },
  "dependencies": {
    "@blackbox-vision/next-google-dfp": "^0.4.1",
    "@sentry/integrations": "^7.64.0",
    "@sentry/nextjs": "^7.64.0",
    "change-case": "^4.1.2",
    "classnames": "^2.3.1",
    "date-fns": "^2.30.0",
    "html-react-parser": "^4.2.1",
    "next": "^13.4.19",
    "next-sitemap": "^4.2.2",
    "nprogress": "^0.2.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-facebook": "^9.0.12",
    "react-gtm-module": "^2.0.11",
    "zustand": "^4.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.22.11",
    "@storybook/addon-a11y": "^7.3.2",
    "@storybook/addon-actions": "^7.3.2",
    "@storybook/addon-essentials": "^7.3.2",
    "@storybook/addon-links": "^7.3.2",
    "@storybook/addon-mdx-gfm": "^7.3.2",
    "@storybook/addon-measure": "^7.3.2",
    "@storybook/addon-outline": "^7.3.2",
    "@storybook/addons": "^7.3.2",
    "@storybook/nextjs": "^7.3.2",
    "@storybook/react": "^7.3.2",
    "@storybook/theming": "^7.3.2",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/typography": "^0.5.4",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^6.1.2",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/gtag.js": "^0.0.13",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.5",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "autoprefixer": "^10.4.15",
    "babel-loader": "^9.1.3",
    "check-code-coverage": "^1.10.5",
    "eslint": "^8.47.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-next": "^13.4.19",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.13",
    "eslint-plugin-tailwind": "^0.2.1",
    "eslint-plugin-unused-imports": "^3.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.6.4",
    "jest-environment-jsdom": "^29.6.4",
    "lint-staged": "^14.0.1",
    "postcss": "^8.4.31",
    "prettier": "^3.0.2",
    "simple-git-hooks": "^2.9.0",
    "storybook": "^7.3.2",
    "storybook-tailwind-dark-mode": "^1.0.22",
    "stylelint": "^15.10.3",
    "stylelint-config-standard": "^34.0.0",
    "tailwind-scrollbar": "^3.0.5",
    "tailwindcss": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "npm run format",
    "preserveUnused": true
  },
  "lint-staged": {
    "**/*/*.{js,ts}?(x)": [
      "eslint --fix",
      "npm run test:unit -- --bail --findRelatedTests --passWithNoTests"
    ],
    "**/*/*.{css,scss}": [
      "stylelint --fix"
    ],
    "**/*/*.md": [
      "npm run format"
    ]
  }
}
