{
  "name": "ncol-next",
  "private": true,
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "build": "next build",
    "build-storybook": "build-storybook",
    "dev": "next dev",
    "format": "prettier --write src/",
    "install:clean": "rimraf ./node_modules && rimraf package-lock.json && npm install",
    "lint": "next lint",
    "start": "next start",
    "storybook:start": "start-storybook -p 6006",
    "test:unit": "jest --config jest.config.ts --coverage",
    "test:coverage": "jest --coverage",
    "test:unit:watch": "jest --watch"
  },
  "dependencies": {
    "@heroicons/react": "^1.0.6",
    "@sentry/nextjs": "^7.7.0",
    "axios": "^0.27.2",
    "change-case": "^4.1.2",
    "classnames": "^2.3.1",
    "date-fns": "^2.28.0",
    "html-react-parser": "^3.0.1",
    "next": "^12.2.2",
    "nprogress": "^0.2.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "zustand": "^3.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@storybook/addon-a11y": "^6.5.9",
    "@storybook/addon-actions": "^6.5.9",
    "@storybook/addon-essentials": "^6.5.9",
    "@storybook/addon-links": "^6.5.9",
    "@storybook/addon-measure": "^6.5.9",
    "@storybook/addon-outline": "^6.5.9",
    "@storybook/addons": "^6.5.9",
    "@storybook/react": "^6.5.9",
    "@storybook/theming": "^6.5.9",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/line-clamp": "^0.4.0",
    "@tailwindcss/typography": "^0.5.4",
    "@testing-library/dom": "^8.16.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.2.5",
    "@types/gtag.js": "0.0.10",
    "@types/jest": "^28.1.6",
    "@types/node": "18.0.5",
    "@types/react": "18.0.15",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "autoprefixer": "^10.4.7",
    "babel-loader": "^8.2.5",
    "eslint": "^8.19.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-next": "12.2.2",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-tailwind": "^0.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "lint-staged": "^13.0.3",
    "npm": "^8.14.0",
    "postcss": "^8.4.14",
    "prettier": "^2.7.1",
    "simple-git-hooks": "^2.8.0",
    "storybook-tailwind-dark-mode": "^1.0.12",
    "tailwind-scrollbar": "^1.3.1",
    "tailwindcss": "^3.1.6",
    "ts-jest": "^28.0.6",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "cd ../../ && npm run format"
  },
  "lint-staged": {
    "src/**/*.{jsx,tsx}?(x)": [
      "eslint --fix",
      "npm run test:unit -- --bail --findRelatedTests"
    ]
  }
}
