{
  "name": "ncol-next",
  "private": true,
  "engines": {
    "node": "16.x"
  },
  "scripts": {
    "build": "next build",
    "postbuild": "next-sitemap",
    "build-storybook": "storybook build",
    "dev": "next dev",
    "format": "prettier --write src/",
    "install:clean": "rimraf ./node_modules && rimraf package-lock.json && npm install",
    "lint": "next lint",
    "start": "next start",
    "storybook:start": "storybook dev -p 6006",
    "test:unit": "jest --config jest.config.ts --coverage",
    "test:coverage": "jest --coverage",
    "test:unit:watch": "jest --watch"
  },
  "dependencies": {
    "@blackbox-vision/next-google-dfp": "^0.2.6",
    "@sentry/integrations": "^7.47.0",
    "@sentry/nextjs": "^7.47.0",
    "axios": "^1.1.2",
    "change-case": "^4.1.2",
    "classnames": "^2.3.1",
    "date-fns": "^2.28.0",
    "html-react-parser": "^3.0.1",
    "next": "^13.2.4",
    "next-sitemap": "^4.0.6",
    "nprogress": "^0.2.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-facebook": "^9.0.12",
    "react-gtm-module": "^2.0.11",
    "zustand": "^4.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@storybook/addon-a11y": "^7.0.2",
    "@storybook/addon-actions": "^7.0.2",
    "@storybook/addon-essentials": "^7.0.2",
    "@storybook/addon-links": "^7.0.2",
    "@storybook/addon-mdx-gfm": "^7.0.2",
    "@storybook/addon-measure": "^7.0.2",
    "@storybook/addon-outline": "^7.0.2",
    "@storybook/addons": "^7.0.2",
    "@storybook/nextjs": "^7.0.2",
    "@storybook/react": "^7.0.2",
    "@storybook/theming": "^7.0.2",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/typography": "^0.5.4",
    "@testing-library/dom": "^9.2.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/gtag.js": "0.0.12",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.8.3",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "autoprefixer": "^10.4.7",
    "babel-loader": "^9.1.0",
    "check-code-coverage": "^1.10.4",
    "eslint": "^8.28.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-next": "^13.2.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.11",
    "eslint-plugin-tailwind": "^0.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.14",
    "prettier": "^2.7.1",
    "simple-git-hooks": "^2.8.0",
    "storybook": "^7.0.2",
    "storybook-tailwind-dark-mode": "^1.0.16",
    "stylelint": "^15.7.0",
    "stylelint-config-standard": "^33.0.0",
    "tailwind-scrollbar": "^3.0.0",
    "tailwindcss": "^3.1.6",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "npm run format",
    "preserveUnused": true
  },
  "lint-staged": {
    "**/*/*.{js,ts}?(x)": [
      "eslint --fix",
      "npm run test:unit -- --bail --findRelatedTests --passWithNoTests"
    ],
    "**/*/*.{css,scss}": [
      "stylelint --fix"
    ],
    "**/*/*.md": [
      "npm run format"
    ]
  }
}
